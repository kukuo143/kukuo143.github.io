<!doctype html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <title>토끼 움직이기</title>
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: #eef;
        }
        #rabbit {
            position: absolute;
            top: 50px;
            left: 50px;
            width: 80px;
            height: 80px;
            background-image: url('https://upload.wikimedia.org/wikipedia/commons/thumb/7/70/Emoji_u1f407.svg/120px-Emoji_u1f407.svg.png');
            background-size: cover;
        }
    </style>
</head>
<body>
    <div id="rabbit"></div>

    <script>
        const rabbit = document.getElementById('rabbit');
        let x = 50;
        let y = 50;

        document.addEventListener('keydown', function(event) {
            const step = 10;
            if (event.key === 'ArrowUp') {
                y -= step;
            } else if (event.key === 'ArrowDown') {
                y += step;
            } else if (event.key === 'ArrowLeft') {
                x -= step;
            } else if (event.key === 'ArrowRight') {
                x += step;
            }
            rabbit.style.left = x + 'px';
            rabbit.style.top = y + 'px';
        });
    </script>
</body>
</html>
